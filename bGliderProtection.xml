        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.red5studios.com/ ../../../schemas/component.xsd"
    >

    <Info
        title="bGliderProtection"
        author="BurstBiscuit"
        description=""
        url="https://bitbucket.org/0x4D61696B/bgliderprotection"
        uiVersion="1000"
    />

    <Events>
        <Event name="ON_ABILITY_USED"           bind="OnAbilityUsed"        />
        <Event name="ON_AFK_CHANGED"            bind="OnAFKChanged"         />
        <Event name="ON_COMPONENT_LOAD"         bind="OnComponentLoad"      />
        <Event name="ON_PLAYER_GLIDE"           bind="OnPlayerGlide"        />
        <Event name="ON_UI_ENTITY_AVAILABLE"    bind="OnEntityAvailable"    />
    </Events>

    <Frames>
        <HUDFrame name="Main" dimensions="left: 6%; width: 250; bottom: 100%-3.5; height: 32">
            <Children>
                <Text id="Status" dimensions="left: 0; width: 100%; bottom: 100%; height: 32" style="font: UbuntuBold_26; halign: center; valign: center; alpha: 1.0; drop-shadow: 1" />
            </Children>
        </HUDFrame>
    </Frames>
